{
  "name"        : "src-run/augustus-reflection-library",
  "license"     : "MIT",
  "type"        : "library",
  "homepage"    : "https://src.run/augustus-reflection-library",
  "description" : "collection of reflection wrapper objects and helprs to simplify common tasks",
  "support" : {
    "email"  : "rmf@src.run",
    "source" : "https://src.run/augustus-reflection-library/git",
    "issues" : "https://src.run/augustus-reflection-library/issues"
  },
  "keywords" : [
    "augustus-reflection-library", "augustus", "reflection", "library", "rmf", "src-run"
  ],
  "authors" : [
    {
      "name"     : "Rob Frawley 2nd",
      "email"    : "rmf@src.run",
      "homepage" : "https://src.run/rmf",
      "role"     : "Project Lead"
    }
  ],
  "require" : {
    "php"                                : "^5.6|^7.0",
    "src-run/augustus-utility-library"   : "^0.5",
    "src-run/augustus-exception-library" : "^0.5"
  },
  "require-dev" : {
    "phpunit/phpunit"        : "~5.0",
    "codacy/coverage"        : "~1.0",
    "satooshi/php-coveralls" : "~1.0"
  },
  "autoload" : {
    "psr-4" : {
      "SR\\Reflection\\" : "lib/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "SR\\Reflection\\Tests\\" : "tests/"
    }
  },
  "minimum-stability" : "dev",
  "prefer-stable"     : true,
  "config": {
    "bin-dir" : "bin"
  },
  "extra": {
    "branch-alias": {
      "dev-master" : "0.6-dev"
    }
  }
}
