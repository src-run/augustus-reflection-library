{
  "name": "src-run/augustus-reflection-library",
  "license": "MIT",
  "type": "library",
  "homepage": "https://src.run/augustus-reflection-library",
  "description": "A simple library providing a partial reflection high-level api.",
  "support": {
    "email": "rmf@src.run",
    "source": "https://src.run/augustus-reflection-library/git",
    "issues": "https://src.run/augustus-reflection-library/issues"
  },
  "keywords": [ "augustus-reflection-library", "augustus", "reflection", "library", "rmf", "src-run" ],
  "authors": [
    {
      "name": "Rob Frawley 2nd",
      "email": "rmf@src.run",
      "homepage": "https://src.run/rmf",
      "role": "Project Lead"
    }
  ],
  "require": {
    "php": "~8.1",
    "src-run/augustus-exception-library": "~0.20",
    "src-run/augustus-utility-library": "~0.20"
  },
  "require-dev": {
    "codacy/coverage": "~1.4",
    "dms/phpunit-arraysubset-asserts": "^0.4.0",
    "friendsofphp/php-cs-fixer": "~3.2",
    "php-coveralls/php-coveralls": "~2.1",
    "symfony/phpunit-bridge": "~4.1 | ~5.0 | ~6.0"
  },
  "autoload": {
    "psr-4": {
      "SR\\Reflection\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SR\\Reflection\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.20-dev"
    }
  }
}
