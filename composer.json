{
    "name"        : "src-run/augustus-reflection-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://get.src.run/augustus-reflection-library",
    "description" : "This library contains a collections of common utilities and helpers for PHP object reflection tasks.",
    "support" : {
        "email"  : "rmf@src.run",
        "issues" : "https://augustus-reflection-library.oss.get.src.run/issues",
        "source" : "https://augustus-reflection-library.oss.get.src.run/git",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"   : [
        "augustus-reflection-library", "reflection", "utilities", "library", "rmf", "get.src.run", "scribe"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@src.run",
            "homepage": "https://get.src.run/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php" : "~5.6|~7.0"
    },
    "require-dev" : {
        "phpunit/phpunit"        : "~5.0",
        "codacy/coverage"        : "~1.0",
        "satooshi/php-coveralls" : "~1.0"
    },
    "autoload" : {
        "psr-4" : {
            "SR\\Reflection\\" : "lib/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "SR\\Reflection\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "bin-dir" : "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "0.5-dev"
        }
    }
}
